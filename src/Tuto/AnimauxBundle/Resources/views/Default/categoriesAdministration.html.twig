{% extends "::base2.html.twig" %}

{% block title %}Catégories | Administration{% endblock %}

{% block body %}
        
<h3>Catégories existantes</h3>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Catégories</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.nom }}</td>
                    <td>
                        <a href="{{ path('tuto_animaux_editerCategorie', {'id': categorie.id }) }}"><i class="fa fa-refresh"></i>&nbsp;Modifier</a>&nbsp;&nbsp;
                        <a href="{{ path('tuto_animaux_supprimerCategorie', {'id': categorie.id }) }}"><i class="fa fa-trash"></i>&nbsp;Supprimer</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tuto_animaux_ajouterCategorie')}}"><i class="fa fa-pencil"></i>&nbsp;Nouvelle catégorie</a><br>

{% endblock %}