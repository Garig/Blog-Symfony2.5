{% extends "::base2.html.twig" %}

{% block title %}Catégories | Administration{% endblock %}

{% block body %}

<h1 class="index">Ajouter une catégorie</h1>

<form method="post" action="{{ path("tuto_animaux_ajouterCategorie") }}" {{ form_enctype(form) }}>

        {{ form_label(form.nom) }}
        {{ form_errors(form.nom) }}
        {{ form_widget(form.nom, { 'attr': {'class': 'form-titre'} }) }}
        
        {{ form_label(form.description) }}
        {{ form_errors(form.description) }}
        {{ form_widget(form.description, { 'attr': {'class': 'form-titre'} }) }}

	{{ form_rest(form) }}

    <input type="submit" class="btn btn-primary bouton">
</form>
        <br>
        
<h3>Catégories existantes</h3>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Catégories</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.nom }}</td>
                    <td>
                        <a href="{{ path('tuto_animaux_editerCategorie', {'id': categorie.id }) }}"><i class="fa fa-refresh"></i>&nbsp;Modifier</a>&nbsp;&nbsp;
                        <a href="{{ path('tuto_animaux_supprimerCategorie', {'id': categorie.id }) }}"><i class="fa fa-trash"></i>&nbsp;Supprimer</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}